float R = 300;
float r = 100;
float theta = 0;
void setup(){
  size(800,800);
  background(0);
}
void draw(){
  noFill();
  stroke(255);
  translate(width/2, height/2);
  float x = R*cos(theta);
  float y = R*sin(theta);
  ellipse(x,y,r,r);
  theta = theta+0.1;
  R = R-1;
  if(R<=0){
    background(0);
    R=300;
  }
}
